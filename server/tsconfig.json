{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "strict": false,
    "rootDir": "./src",
    "outDir": "./build",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmitOnError": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "files": ["src/index.ts"]
}
